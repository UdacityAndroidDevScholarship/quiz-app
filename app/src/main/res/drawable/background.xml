<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/colorPrimary"/>
    <item>
        <color android:color="@color/white"/>
    </item>

    <item android:top="440dp"
        android:bottom="-200dp"
        android:left="0dp"
        android:right="-300dp">
