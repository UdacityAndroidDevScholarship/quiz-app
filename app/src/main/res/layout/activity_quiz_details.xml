<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context="com.developervishalsehgal.udacityscholarsapp.QuizDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/quiz_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/iv_quiz_details_btn_close"
            android:layout_width="@dimen/quiz_details_toolbar_btn_size"
            android:layout_height="@dimen/quiz_details_toolbar_btn_size"
            android:layout_gravity="start"
            android:adjustViewBounds="false"
            android:background="@drawable/ic_close"
            android:contentDescription="@null"
            android:src="@drawable/ripple_effect" />

        <TextView
            android:id="@+id/tv_quiz_details_toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/quiz_details_toolbar_title_margin_start"
            android:text="@string/activity_title"
            android:textAppearance="@style/Toolbar.TitleText"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/iv_quiz_details_btn_help"
            android:layout_width="@dimen/quiz_details_toolbar_btn_size"
            android:layout_height="@dimen/quiz_details_toolbar_btn_size"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/quiz_details_toolbar_btn_margin"
            android:layout_marginEnd="@dimen/quiz_details_toolbar_btn_margin"
            android:layout_marginTop="@dimen/quiz_details_toolbar_btn_margin"
            android:adjustViewBounds="false"
            android:background="@drawable/ic_help"
            android:contentDescription="@null"
            android:src="@drawable/ripple_effect" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/quiz_details_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/quiz_details_card_view_margin"
        android:layout_marginLeft="@dimen/quiz_details_card_view_margin"
        android:layout_marginRight="@dimen/quiz_details_card_view_margin"
        android:layout_marginTop="@dimen/quiz_details_card_view_margin_top"
        android:padding="@dimen/quiz_details_card_view_padding"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/quiz_details_card_corner_radius">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_quiz_details_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:ellipsize="end"
                    android:text="@string/quiz_details_quiz_title"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/quiz_details_name_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_quiz_details_author_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/quiz_details_author_label"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/quiz_details_sub_text_size"
                    app:layout_constraintStart_toStartOf="@+id/tv_quiz_details_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quiz_details_name" />

                <TextView
                    android:id="@+id/tv_quiz_details_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/quiz_details_author_name"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/quiz_details_sub_text_size"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_quiz_details_author_label"
                    app:layout_constraintTop_toTopOf="@+id/tv_quiz_details_author_label" />

                <TextView
                    android:id="@+id/tv_quiz_details_released_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/quiz_details_released_label"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/quiz_details_sub_text_size"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@+id/tv_quiz_details_author_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quiz_details_author_label" />

                <TextView
                    android:id="@+id/tv_quiz_details_released_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/quiz_details_released_value"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/quiz_details_sub_text_size"
                    app:layout_constraintStart_toEndOf="@+id/tv_quiz_details_released_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quiz_details_author_name" />

                <TextView
                    android:id="@+id/tv_quiz_details_deadline_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/quiz_details_deadline_label"
                    android:textAllCaps="true"
                    android:textColor="@color/color_green_deadline"
                    android:textSize="@dimen/quiz_details_sub_text_size"
                    app:layout_constraintStart_toStartOf="@+id/tv_quiz_details_released_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quiz_details_released_label" />

                <TextView
                    android:id="@+id/tv_quiz_details_deadline_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/quiz_details_deadline_value"
                    android:textColor="@color/color_green_deadline"
                    android:textSize="@dimen/quiz_details_sub_text_size"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/tv_quiz_details_deadline_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quiz_details_released_date" />

                <TextView
                    android:id="@+id/tv_quiz_details_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_large"
                    android:paddingBottom="@dimen/quiz_details_description_padding"
                    android:paddingTop="@dimen/quiz_details_description_padding"
                    android:text="@string/quiz_details_description"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/quiz_details_sub_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_quiz_details_deadline_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quiz_details_deadline_label" />

                <TextView
                    android:id="@+id/tv_quiz_details_score_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_x_large"
                    android:text="@string/quiz_details_score_label"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/quiz_details_score_label_text_size"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quiz_details_description" />

                <TextView
                    android:id="@+id/tv_quiz_details_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:text="@string/quiz_details_status"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/quiz_details_status_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_quiz_details_score_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quiz_details_score_label"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/iv_quiz_details_btn_play"
                    android:layout_width="@dimen/quiz_details_btn_play_size"
                    android:layout_height="@dimen/quiz_details_btn_play_size"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:contentDescription="@string/quiz_details_btn_play_description"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_quiz_details_status"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_quiz_details_score_label"
                    app:srcCompat="@drawable/ic_play" />


            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>