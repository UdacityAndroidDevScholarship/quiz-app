<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout_discussion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@animator/appbar_elevated"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarrnav"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/discussion_title" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/constraintLayout">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/rl_discussion"
            android:id="@+id/rv_discussion"
            android:background="@color/black"
            android:foregroundGravity="right"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rl_discussion"
        android:background="@drawable/discussion_edittext"
        android:layout_margin="@dimen/difficulty_view_height"
        android:paddingTop="@dimen/card_view_corner_radius"
        android:paddingBottom="@dimen/card_view_corner_radius"
        android:paddingLeft="@dimen/difficulty_view_height"
        android:paddingRight="@dimen/difficulty_view_height">
   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="@string/discussion_hint"
       android:textColor="@color/screen_one"
       android:id="@+id/edt_discussion"
       android:layout_toStartOf="@id/linlay_send"
       />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/discussion_send"
            android:id="@+id/linlay_send"
            android:paddingRight="@dimen/cardview_default_radius"
            android:paddingTop="@dimen/cardview_default_radius"
            android:paddingBottom="@dimen/cardview_default_radius"
            android:paddingLeft="@dimen/difficulty_view_margin">
        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btn_send"
            android:background="@drawable/ic_send"
           />
        </LinearLayout>
    </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
