<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iconsplashscreen"
        android:layout_width="@dimen/splashscreen_logo"
        android:layout_height="wrap_content"
        android:layout_above="@id/app_title"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/medium_margin"
        android:gravity="center"
        android:text="@string/quiz_app"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/progressbar_splash"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/splashscreen_progressbar_height"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:progressDrawable="@drawable/splashscreen_progressbar"
        android:visibility="invisible" />


</RelativeLayout>
