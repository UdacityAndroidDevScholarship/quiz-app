<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_gradient"
    tools:context=".ui.profile.UserProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/udacity_app_logo"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp" />

    <ImageButton
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit_white_24dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edittext_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:textColorHint="@android:color/white"
        android:visibility="gone">

        <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:text="Akshit Jain"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edittext_slack_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:hint="Slack handle"
        android:paddingTop="2dp"
        android:textColorHint="@android:color/white"
        android:visibility="gone">

        <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/edit_profile_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_slack_handle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_profile_done_button_background"
        android:padding="4dp"
        android:src="@drawable/ic_done_white_32dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_slack_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_thin"
        android:maxLines="1"
        android:text="akshit.udacity"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_slack_handle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Google Udacity Scholar India 2018"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:text="Android Developer Track"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_track"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="abcxyz@gmail.com"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/profile_button_background"
        android:text="NEXT"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="italic" />

</RelativeLayout>