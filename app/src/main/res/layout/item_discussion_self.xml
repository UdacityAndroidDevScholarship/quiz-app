<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/item_discussion_min_margin"
            android:layout_marginTop="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/item_discussion_chat_bubble_card_radius"
            app:contentPadding="@dimen/item_discussion_chat_bubble_card_content_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/item_discussion_minimum_content_height"
                android:minWidth="@dimen/item_discussion_minimum_content_width"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_discussion_user_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Mohammad Rahil"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                         />

                    <TextView
                        android:id="@+id/item_discussion_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:45 AM"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_discussion_comment_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Kindly help me out to generate pull request for the quiz app."
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </FrameLayout>


    <ImageView
        android:id="@+id/item_discussion_chat_user_image"
        android:layout_width="@dimen/item_discussion_user_image"
        android:layout_height="@dimen/item_discussion_user_image"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/details_page_profile_pic" />

</LinearLayout>