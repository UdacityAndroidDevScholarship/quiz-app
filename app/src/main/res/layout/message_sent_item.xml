<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/message_body_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_message_user"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="@color/materialBlack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="I have a plan - Attack!" />

    <TextView
        android:id="@+id/message_time_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/message_body_user"
        app:layout_constraintRight_toLeftOf="@id/message_body_user"
        tools:text="11:59" />

</android.support.constraint.ConstraintLayout>