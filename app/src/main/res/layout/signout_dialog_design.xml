<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="24dp"
        android:id="@+id/dialog_header"
        android:paddingTop="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_udacity_logo"
            android:src="@drawable/ic_udacity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_udacity_logo"
            android:paddingLeft="18dp"
            android:text="Are you sure?"
            android:textColor="#000000" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_message"
        android:layout_below="@id/dialog_header"
        android:padding="24dp"
        android:text="This will sign you out from device." />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="1dp"
        android:layout_below="@id/dialog_message"
        android:id="@+id/dialog_buttons"
        android:paddingRight="24dp">

        <Button
            android:id="@+id/signout_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="CANCEL"
            android:textColor="@color/blue_jeans"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/signout_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="OK"
            android:layout_toRightOf="@id/signout_cancel_button"
            android:textColor="@color/blue_jeans"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle" />
    </RelativeLayout>
</RelativeLayout>